import turtle

def tree(branchLen,t,size):
   
    if branchLen > 5:
	    t.pensize(size)
        t.forward(branchLen)
        # This draws the right portion of the tree
        t.right(20)
        # Where we make a recursive call
        tree(branchLen-15,t,size-1)
        # Left portion of the tree
        t.left(40)
        # Another recursive call
        tree(branchLen-15,t,size-1)
        t.right(20)
        t.backward(branchLen)

def main():
    
    t = turtle.Turtle()
    myWin = turtle.Screen()
    t.left(90)
    t.up()
    t.backward(100)
    t.down()
    t.color("green")
    tree(75,t,4)
 

main()
