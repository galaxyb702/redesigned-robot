import turtle
def starburst(t):
    t.penup()
	t.setposition(100,100)
	t.pendown()
	t.color("orange")
	t.pensize(2)
	for i in range(1,37):
	   for j in range(4):
	      t.forward(20)
		  t.right(90)
	   t.right(10)
	


def window(t,x,y,l):
    t.penup()
    t.setposition(x,y)
    t.pendown()
    t.setheading(90)
    t.pensize(3)
    t.color("chocolate","white")
    t.speed(0)
    
    t.begin_fill()
    for x in range(4):
        t.forward(l)
        t.left(90)
    t.end_fill()
    t.setheading(90)
    t.forward(l/2)
    t.right(90)
    t.backward(l)
    t.forward(l/2)
    t.setheading(90)
    t.forward(l/2)
    t.backward(l)

def house(t,x,y,l):
     t.penup()
	 t.speed(0)
     t.setposition(x,y)
     t.pendown()
     t.setheading(90)
     t.color("chocolate","red")
     t.pensize(4)
     t.begin_fill()
     for x in range(4):
          t.forward(l)
          t.left(90)
     t.end_fill()
     t.color("aqua")
     t.setheading(0)
     t.penup()
     t.backward(l/2 + l/4)
     t.pendown()
     t.setheading(90)
     t.begin_fill()
     for x in range(4):
          t.forward(70)
          t.right(90)
     t.end_fill()
     t.penup()
     t.setposition(x,y)
     t.setheading(90)
     t.forward(l)
     t.setheading(0)
     t.pendown()
     t.color("gray")
     t.begin_fill()
     for x in range (2):
         t.left(120)
         t.forward(l)
     t.end_fill()
     
     
     
     
          

def main():
        
        t = turtle.Turtle()
        wn = turtle.Screen()
        wn.bgcolor("skyblue")
        t.penup()
        t.setposition(-400,-400)
        t.color("green")
        t.pendown()
        t.begin_fill()
		t.speed(0)
        for x in range (2):
             t.forward(800)
             t.left(90)
             t.forward(400)
             t.left(90)
        t.end_fill()
        house(t,0,-100,200)
        window(t,-120,0,50)
        window(t,-20,0,50)
		starburst(t)

main()
